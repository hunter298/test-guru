<div class="container">
  <div class="row">
    <%= link_to 'View all available badges', badges_all_path %>
    <div class="col-12">
      <h1><%= 'Your badges:' %></h1>
    </div>
    <table class="table table-responsive col-12">
      <thead>
      <tr>
        <th scope="col"><%= 'Icon' %></th>
        <th scope="col" ><%= 'Title' %></th>
      </tr>
      </thead>
      <tbody>
      <%= render @badges %>
      </tbody>
    </table>
  </div>
</div>