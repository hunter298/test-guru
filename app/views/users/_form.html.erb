<%= form_with model: @user, local: true do |form| %>
  <%= render 'shared/errors', resource: @user %>

  <table>
    <tr>
      <th align="right">
        <%= form.label :email %>
      </th>
      <th>
        <%= form.text_field :email, id: :user_email %>
      </th>
    </tr>

    <tr>
      <th align="right">
        <%= form.label :password %>
      </th>
      <th>
        <%= form.password_field :password, id: :user_password %>
      </th>
    </tr>

    <tr>
      <th align="right">
        <%= form.label :password_confirmation %>
      </th>
      <th>
        <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
      <th>
    </tr>

    <tr>
      <th></th>
      <th align="left"><%= form.submit %></th>
    </tr>
  </table>

<% end %>