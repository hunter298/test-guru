<ul>
  <% resource.each do |question| %>
    <li>
      <%= question.body %>
      <%= link_to 'Open', question_path(question) %> |
      <%= link_to 'Edit', edit_question_path(question) %> |
      <%= link_to 'Delete',
                  question_path(question),
                  method: :delete,
                  data: {confirm: 'Are You sure?'} %>
    </li>
  <% end %>
</ul>


